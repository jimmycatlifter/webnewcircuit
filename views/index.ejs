<%- include('partials/header') %>
<%- include('partials/navbar') %>

<main class="main">
  <section class="hero">
    <div class="container">
      <div class="hero-content">
        <h1 class="hero-title">Welcome to Express Auth App</h1>
        <p class="hero-subtitle">A secure authentication solution with protected routes</p>
        
        <div class="hero-cta">
          <% if (locals.currentUser) { %>
            <a href="/dashboard" class="btn btn-primary">Go to Dashboard</a>
          <% } else { %>
            <a href="/login" class="btn btn-primary">Login</a>
            <a href="/register" class="btn btn-outline">Register</a>
          <% } %>
        </div>
      </div>
      
      <div class="hero-image">
        <img src="template_tails/src/images/product/product-01.jpg" alt="Secure Authentication">
      </div>
    </div>
  </section>

  <section class="features">
    <div class="container">
      <h2 class="section-title">Key Features</h2>
      
      <div class="features-grid">
        <div class="feature-card">
          <div class="feature-icon"><i class="fas fa-user-shield"></i></div>
          <h3>Secure Authentication</h3>
          <p>User authentication with JWT tokens and encrypted passwords</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon"><i class="fas fa-lock"></i></div>
          <h3>Protected Routes</h3>
          <p>Secure access to authorized users only</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon"><i class="fas fa-user-cog"></i></div>
          <h3>User Management</h3>
          <p>Complete user profile management system</p>
        </div>
        
        <div class="feature-card">
          <div class="feature-icon"><i class="fas fa-palette"></i></div>
          <h3>Modern Design</h3>
          <p>Clean and responsive user interface</p>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>